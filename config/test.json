{
  "services": {
    "declarationsPath": "./test/services"
  },
  "recorder": {
    "versions": {
      "storage": {
        "git": {
          "path": "./test/data/versions",
          "publish": false,
          "publicRepository": "https://github.com/ambanum/OpenTermsArchive-versions.git",
          "snapshotsBaseUrl": "https://github.com/ambanum/OpenTermsArchive-snapshots/commit/",
          "author": {
            "name": "OTA Bot",
            "email": "bot@opentermsarchive.org"
          }
        },
        "mongo": {
          "connectionURI": "mongodb://localhost:27017",
          "database": "open-terms-archive-test",
          "collection": "versions"
        }
      }
    },
    "snapshots": {
      "storage": {
        "git": {
          "path": "./test/data/snapshots",
          "publish": false,
          "publicRepository": "https://github.com/ambanum/OpenTermsArchive-snapshots.git",
          "author": {
            "name": "OTA Bot",
            "email": "bot@opentermsarchive.org"
          }
        },
        "mongo": {
          "connectionURI": "mongodb://localhost:27017",
          "database": "open-terms-archive-test",
          "collection": "snapshots"
        }
      }
    }
  },
  "fetcher": {
    "waitForElementsTimeout": 1000
  }
}
