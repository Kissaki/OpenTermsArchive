{
  "name": "OpenTermsArchive",
  "version": "0.15.0",
  "description": "Tracks and makes visible all changes to the Terms Of Service of online service providers.",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=12.17"
  },
  "scripts": {
    "export": "node scripts/export/makedataset.js",
    "release": "node scripts/release/build_release.js",
    "start": "node --max-http-header-size=32768 src/index.js",
    "start:modified": "node --max-http-header-size=32768 src/index.js -- --modified-only",
    "start:prod": "cross-env NODE_ENV=production node --max-http-header-size=32768  src/index.js",
    "start:scheduler": "node --max-http-header-size=32768 src/index.js --schedule",
    "start:scheduler:prod": "cross-env NODE_ENV=production node --max-http-header-size=32768 src/index.js --schedule",
    "sync-git": "cd data/versions && git fetch && git reset --hard origin/master && cd ../snapshots && git fetch && git reset --hard origin/master",
    "refilter": "node src/index.js --refilter-only",
    "setup": "node scripts/setup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "posttest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha --file './test/helper.js' --recursive \"./src/**/*.test.js\" --recursive \"./services/**/*.test.js\" --exit",
    "test:debug": "cross-env NODE_ENV=test mocha --file './test/helper.js' --recursive \"./src/**/*.test.js\" --inspect-brk --exit",
    "validate": "cross-env NODE_ENV=validation npx --node-arg=--unhandled-rejections=strict --node-arg=--max-http-header-size=32768 node_modules/.bin/mocha --delay --file './test/helper.js' scripts/validation/validate.js",
    "validate:schema": "npm run validate -- --schema-only",
    "validate:modified": "npm run validate -- --modified-only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ambanum/OpenTermsArchive.git"
  },
  "author": "ambanum",
  "license": "EUPL-1.2",
  "bugs": {
    "url": "https://github.com/ambanum/OpenTermsArchive/issues"
  },
  "homepage": "https://github.com/ambanum/OpenTermsArchive#readme",
  "devDependencies": {
    "ajv": "^6.12.6",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.25.2",
    "inquirer": "^8.1.2",
    "json-source-map": "^0.6.1",
    "mocha": "^8.3.0",
    "nock": "^13.0.7",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0"
  },
  "dependencies": {
    "@accordproject/markdown-cicero": "^0.14.0",
    "@accordproject/markdown-pdf": "^0.12.4",
    "@lolpants/ptimeout": "^1.0.3",
    "abort-controller": "^3.0.0",
    "async": "^3.2.0",
    "chai-exclude": "^2.0.2",
    "config": "^3.3.3",
    "cross-env": "^7.0.3",
    "datauri": "^3.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.1.0",
    "http-proxy-agent": "^4.0.1",
    "https": "^1.0.0",
    "https-proxy-agent": "^5.0.0",
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "jsdom": "^17.0.0",
    "mime": "^2.5.2",
    "node-fetch": "^3.0.0",
    "node-schedule": "^2.0.0",
    "octokit": "^1.7.0",
    "pdfjs-dist": "^2.9.359",
    "puppeteer": "^7.1.0",
    "puppeteer-extra": "^3.1.17",
    "puppeteer-extra-plugin-stealth": "^2.7.5",
    "sib-api-v3-sdk": "^7.2.3",
    "simple-git": "^2.17.0",
    "turndown": "^7.0.0",
    "user-agents": "^1.0.775",
    "winston": "^3.3.3",
    "winston-mail": "^2.0.0"
  }
}
